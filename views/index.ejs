<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bujo HomePage</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>


    <header id="header">
        <div style = "display: flex; justify-content: space-between;">
        <a href="/journal">New Journal</a>
        <h2>Bujo</h2>
        <button id = "logout-button"type = "button" class = "btn btn-light">Logout</button>
      </div>
    </header>
    <div class="row justify-content-start p-5">
    <% if (typeof templates != 'undefined') { %>
      <% templates.forEach(function(item) { %>

          <div class="col-xs-5 p-3">
          <div class="card" style="width: 24rem;">
            <img class="img-thumbnail"src="<%= item.image %>"  alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <div class = "row justify-content-between">
              <a href="/template/<%= item.id %>" class="btn btn-outline-success">View</a>
              <form action="/api/templates/<%= item.id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger" type="submit">Delete</button>
              </form>
            </div>
            </div>
          </div>
          </div>
      <% }) %>
  <% } %>
  
  </div>
</body>
<script src = './js/app.js'></script>
</html>