<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= template.title %></title>
    <link rel="stylesheet" href="/css/style.css" type = "text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>

    <header id="header">
        <div style = "display: flex; justify-content: space-between;">
        <a href="/journal">New Journal</a>
        <h2>Bujo</h2>
        <button id = "logout-button"type = "button" class = "btn btn-light">Logout</button>
      </div>
    </header>
    <div class="row justify-content-start p-5">
    <% if (typeof template != 'undefined') { %>
          <div class="col-xs-12 p-3">
          <div class="card" style="width: 35rem;">
            <img class="img-thumbnail"src="<%= template.image %>"  alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= template.title %></h5>
              <p class="card-text"><%= template.id %></p>
              <div class = "row justify-content-between">
              <a href="/index%>" class="btn btn-outline-warning">Return</a>
              <form action="/api/templates/<%= template.id %>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger" type="submit">Delete</button>
              </form>
            </div>
            </div>
          </div>
          </div>
  <% } %>
  </div>
</body>
<script src = '/js/app.js'></script>
</html>